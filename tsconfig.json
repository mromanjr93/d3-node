{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es6"
        ],
        "module": "commonjs",
        "outDir": "dist",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "typeRoots": [
            "./node_modules/@types"            
        ],
        "types": [
            "node",
            "reflect-metadata"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/*.ts",   
        "src/**/*.spec.ts",
        "src/*.spec.ts"
    ],
    "exclude": [
        "./node_modules"
    ],
    "buildOnSave": true,
    "compileOnSave": true
}